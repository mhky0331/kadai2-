<h1>Editing Book<h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<a class="show_1" href="/books/1">Show</a>
|
<a class="back" href="/books">Back</a>
<% end %>